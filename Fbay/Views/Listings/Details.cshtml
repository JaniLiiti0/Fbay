@model dynamic

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Listings.Item</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Seller
        </dt>
        <dd class="col-sm-10">
            @Model.Users.Fname
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Listings.Amount
        </dd>
        <dd class="col-sm-10">
            <img src="@Url.Content(@Model.Listings.Image)" style="max-width:300px;width:100%;max-height:300px;height:100%" />
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Listings.Listing_id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<input type="hidden" asp-for="Listing_id" />-->
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input name="boughtAmount" class="form-control" type="number" value="1" min="1" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add to cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Listings.Listing_id">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
