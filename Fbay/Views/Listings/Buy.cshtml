@model dynamic

@{
    ViewData["Title"] = "Buy";
}

<h1>Buy</h1>

<h4>@Model.Listings.Item</h4>
<hr />
<div class="row">

    <dl class="row">
        <dt class="col-sm-2">
            Seller
        </dt>
        <dd class="col-sm-10">
            @Model.Users.Fname
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Listings.Amount
        </dd>
        <dd class="col-sm-10">
            <img src="@Url.Content(@Model.Listings.Image)" style="max-width:300px;width:100%;max-height:300px;height:100%" />
        </dd>

    </dl>
    <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Listings.Listing_id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--<input type="hidden" asp-for="Listing_id" />-->
        <div class="form-group">
            <label class="control-label">Amount</label>
            <input name="boughtAmount" class="form-control" type="number" value="1" min="1" />
        </div>
        <div class="form-group">
            <input type="submit" value="Buy" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
