@model IEnumerable<Fbay.Models.Listings>

@{
    ViewData["Title"] = "Index";
}

<h1>Listings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New listing</a>

    <a asp-action="OldListings" class=" float-right pull-right btn btn-secondary">Old listings</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if (item.Amount > 0)
    {
        <tr>
            <td style="text-align:center">
                <b>
                    <a asp-action="Details" asp-route-id="@item.Listing_id" style="text-decoration: none; color: black">
                        @Html.DisplayFor(modelItem => item.Item)
                    </a>
                </b>
                <br />
                <a asp-action="Details" asp-route-id="@item.Listing_id">
                    <img src="@Url.Content(@item.Image)" style="max-width:150px;width:100%;max-height:150px;height:100%" />
                </a>
            </td>
            <td style="text-align:center">
                <a asp-action="Details" asp-route-id="@item.Listing_id" style="text-decoration: none; color: black">
                    @Html.DisplayFor(modelItem => item.Price)
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Listing_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Listing_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Listing_id">Delete</a>
            </td>
        </tr>
        }
    }
    </tbody>
</table>
